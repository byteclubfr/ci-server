{
	"enabled": false,
	"filter": {
		"repo": "user/project"
	},
	"scripts": {
		"build": "npm install && npm update",
		"test": "npm test",
		"deploy.before": "$PROJECT/stop",
		"deploy.after": "$PROJECT/start",
		"deploy.cwd": "/path/to/project",
	},
	"processes": [
		{
			"filter": {
				"event": "push",
				"branch": "master"
			},
			"pass": ["@notify", "@deploy"],
			"fail": ["@notify"],
			"error": ["@notify"]
		},
		{
			"filter": {
				"event": "pull_request"
			},
			"pass": ["@notify", "@status"],
			"fail": ["@notify", "@status"],
			"error": ["@notify", "@status"]
		}
	]
}
